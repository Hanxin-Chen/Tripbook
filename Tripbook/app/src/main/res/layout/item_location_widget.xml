<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/llItemLocationContainer"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/comment_list_item_padding"
    android:paddingBottom="@dimen/comment_list_item_padding"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin">
    <ImageView
        android:id="@+id/ivLocationImage"
        android:layout_width="@dimen/widget_image_size"
        android:layout_height="@dimen/widget_image_size"
        android:src="@drawable/camera_placeholder"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/primary_text"
            android:paddingBottom="@dimen/comment_list_item_padding"
            android:text="@string/add_location_name_hint" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivLocationDistance"
                android:layout_width="@dimen/widget_icons_size"
                android:layout_height="@dimen/widget_icons_size"
                android:layout_marginEnd="@dimen/widget_base_margin"
                android:src="@drawable/ic_address" />
            <TextView
                android:id="@+id/tvLocationDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:lines="1"
                android:layout_marginEnd="@dimen/widget_base_margin" />
            <ImageView
                android:id="@+id/ivLocationComments"
                android:layout_width="@dimen/widget_icons_size"
                android:layout_height="@dimen/widget_icons_size"
                android:layout_marginEnd="@dimen/widget_base_margin"
                android:src="@drawable/ic_comments_green" />
            <TextView
                android:id="@+id/tvLocationCommentsNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:lines="1"
                android:layout_marginEnd="@dimen/widget_base_margin" />
            <ImageView
                android:id="@+id/ivLocationRates"
                android:layout_width="@dimen/widget_icons_size"
                android:layout_height="@dimen/widget_icons_size"
                android:layout_marginEnd="@dimen/widget_base_margin"
                android:src="@drawable/ic_rate_orange" />
            <TextView
                android:id="@+id/tvLocationRates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:lines="1"
                android:layout_marginEnd="@dimen/widget_base_margin" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>