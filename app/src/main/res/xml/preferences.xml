<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="@string/preference_distance_unit_key"
        android:title="@string/preference_unit_key_title"
        android:entries="@array/distance_units"
        android:defaultValue="@string/kilometers"
        android:summary="@string/kilometers_ext"
        android:entryValues="@array/distance_units_values"
        />
    <EditTextPreference
        android:defaultValue="@string/def_distance"
        android:inputType="number"
        android:key="@string/preference_distance_range_key"
        android:title="@string/preference_distance_range"
        android:summary="@string/def_distance"
        android:dialogIcon="@drawable/ic_address" />
</PreferenceScreen>